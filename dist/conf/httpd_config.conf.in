#
# DEMO PLAIN TEXT CONFIGURATION FILE
#

serverName                       lshttpd
user                             %USER%
group                            %GROUP%
priority                         0
autoRestart                      1 
chrootPath                       / 
enableChroot                     0 
inMemBufSize                     60M 
swappingDir                      /tmp/lshttpd/swap 
autoFix503                       1 
gracefulRestartTimeout 
phpSuExec                        0 
phpSuExecMaxConn 
mime                             $SERVER_ROOT/conf/mime.properties 
showVersionNumber                0 
adminEmails                      %ADMIN_EMAIL%
adminRoot                        $SERVER_ROOT/admin/ 
indexFiles                       index.html

errorlog {
        fileName             $SERVER_ROOT/logs/error.log
        logLevel             DEBUG
        debugLevel           10
        rollingSize          10M
        enableStderrLog      1
}
    
accessLog {
        fileName             $SERVER_ROOT/logs/access.log    
        rollingSize          10M    
        keepDays             30    
        compressArchive      0
        logReferer           1     
        logUserAgent         1
}

    
expires {
    enableExpires           1
    expiresByType           image/*=A604800, text/css=A604800, application/x-javascript=A604800
}

tuning{
    maxConnections               300 
    maxSSLConnections            200 
    connTimeout                  300 
    maxKeepAliveReq              1000 
    smartKeepAlive               0 
    keepAliveTimeout             5 
    sndBufSize                   0 
    rcvBufSize                   0 
    eventDispatcher              best 
    maxCachedFileSize            4096 
    totalInMemCacheSize          20M 
    maxMMapFileSize              256K 
    totalMMapCacheSize           40M 
    useSendfile                  1 
    useAIO                       1 
    AIOBlockSize                 4 
    fileETag                     28 
    SSLCryptoDevice              null 
    maxReqURLLen                 4096 
    maxReqHeaderSize             8192 
    maxReqBodySize               10M 
    maxDynRespHeaderSize         4K 
    maxDynRespSize               1M 
    enableGzipCompress           1 
    enableDynGzipCompress        1 
    gzipCompressLevel            6 
    compressibleTypes            text/html 
    gzipAutoUpdateStatic         1 
    gzipStaticCompressLevel      6 
    gzipMaxFileSize              1M 
    gzipMinFileSize              300 
}

security{
    
    accessDenyDir{
            dir                  /
            dir                  /etc/*
            dir                  /dev/*
            dir                  $SERVER_ROOT/conf/*
            dir                  $SERVER_ROOT/admin/conf/*
    }
    
    
    
    fileAccessControl{
        followSymbolLink                                     1 
        checkSymbolLink                                     0 
        forceStrictOwnership                             0 
        requiredPermissionMask                         000 
        restrictedPermissionMask                     000 
    }

    perClientConnLimit{
        staticReqPerSec                                 0 
        dynReqPerSec                                 0 
        outBandwidth                                 0 
        inBandwidth                                 0 
        softLimit                                 10000 
        hardLimit                                 10000 
        gracePeriod                                 15 
        banPeriod                                                 300 
    }

    CGIRLimit{
        maxCGIInstances                         20 
        minUID                                 11 
        minGID                             10 
        priority                         0 
        CPUSoftLimit                         10 
        CPUHardLimit                     50 
        memSoftLimit                         460M 
        memHardLimit                         470M 
        procSoftLimit                         400 
        procHardLimit                         450 
    }
        
    accessControl{
            allow                             ALL
            deny
    }
}
    
    
extProcessor{
    type                 lsapi 
    name                 lsphp5
    address                 uds://tmp/lshttpd/lsphp.sock 
    maxConns                     35 
    env                         PHP_LSAPI_MAX_REQUESTS=500 
    env                         PHP_LSAPI_CHILDREN=35 
    initTimeout                     60 
    retryTimeout                 0 
    persistConn                 1 
    pcKeepAliveTimeout
    respBuffer                 0 
    autoStart                     1 
    path                     $SERVER_ROOT/fcgi-bin/lsphp5 
    backlog                             100 
    instances                     1 
    priority                 0 
    memSoftLimit             480M 
    memHardLimit             500M 
    procSoftLimit             400 
    procHardLimit             500 
}


scriptHandler{
    add lsapi:lsphp5          php
}



railsDefaults{
    rubyBin                  %RUBY_BIN%
    railsEnv                 1 
    maxConns                 5 
    env                      LSAPI_MAX_REQS=1000 
    env                      LSAPI_MAX_IDLE=60 
    initTimeout              60 
    retryTimeout             0 
    pcKeepAliveTimeout       60 
    respBuffer               0 
    backlog                  50 
    runOnStartUp             1
    extMaxIdleTime           300
    priority                 3 
    memSoftLimit             150M 
    memHardLimit             200M 
    procSoftLimit            500 
    procHardLimit            600 
}
    
    
    
virtualHost{
    name                     Example 
    vhRoot                   $SERVER_ROOT/DEFAULT/
    allowSymbolLink          1 
    enableScript             1 
    restrained               1 
    maxKeepAliveReq
    smartKeepAlive                  
    setUIDMode               0 
    chrootMode               0 
    include                  $SERVER_ROOT/DEFAULT/conf/vhconf.conf
}
    



listener{
    name                     Default
    address                  *:%HTTP_PORT%
    secure                   0
    map                      Example *
}
    
    
    
vhTemplate{
    name                     centralConfigLog
    templateFile             $SERVER_ROOT/conf/templates/ccl.xml
    listeners                Default
}

vhTemplate{
    name                     PHP_SuEXEC
    templateFile             $SERVER_ROOT/conf/templates/phpsuexec.xml
    listeners                Default
}

vhTemplate{
    name                     EasyRailsWithSuEXEC
    templateFile             $SERVER_ROOT/conf/templates/rails.xml
    listeners                Default
}
